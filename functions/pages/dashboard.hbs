    <div class="about-section">
        <h1>Your Blogs</h1>
    </div>
    <div class="row" style="padding-top:10vmin">
        <div class="col-sm" style="text-align:center">
            <h1>{{#if curruser}}
                {{curruser}}
            {{else}}
                Test User
            {{/if}}</h1>
            <h5>Posts: {{#if posts}}
            {{posts}}
            {{else}}
            1
