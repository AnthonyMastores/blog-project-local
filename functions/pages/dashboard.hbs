            <div class="wrapper">
                <!-- 1st blog post -->
                <div class="card" onclick="window.location='http://localhost:3000/clicked'">
                    <!-- #tags,heading,description -->
                    <div class="card-body">
                        <h2 class="blog-title">Test</h2>
                        <p class="blog-description">Description</p>

