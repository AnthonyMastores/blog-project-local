    <div class="container text-center">
      <div class="row ">
          <div class="col-md-6 mx-auto">
            <div class="card card-body bg-light mt-5">
              <h2>Login</h2>

              <form>
                <div class="form-group">
                  <label for="email">Email: <sup>*</sup></label>
                    <input id="txtEmail" type="email" name="email" class="form-control form-control-lg">
                </div>
                <div class=" form-group">
                  <label for="password">Password: <sup>*</sup></label>
              <input id="txtPassword" name="password" class="form-control form-control-lg" type="password">
            </div>

            <div class=" row">
            <div style ="padding-top:1.2rem" class="col">
              <input id="btnLogin" style = "background-color: #474e5d" value="Login" class="btn btn-primary btn-block">
            </div>
          </div>

        </form>
      </div>
    </div>
      <div class="col-md-6 mx-auto">
      <div class="card card-body bg-light mt-5">
        <h2>Create An Account</h2>
        
        <form>
            <div class="form-group">
                <label for="email">Email: <sup>*</sup></label>
                <input id="signupEmail" type="email" name="email" class="form-control form-control-lg">
            </div>

            <div class="form-group">
                <label for="password">Password: <sup>*</sup></label>
                <input id="signupPassword" type="password" name="password" class="form-control form-control-lg" type="password">
                <span class="invalid-feedback"></span>
            </div>

            <div class=" row">
            <div style ="padding-top:1.2rem" class="col">
              <input id="btnSignup" style = "background-color: #474e5d" value="Sign Up" class="btn btn-primary btn-block">
            </div>
          </div>
          </form>
          </div>
        </div>
              <h1>OR</h1>
              <div class="row ">
                <!-- TODO: Add functionality -->
                <button class="button mt-2" value="google_sign_in" type="button">Sign In with google</button>
              </div>
          </div>
      </div>

  </body>
  <script src="./js/bundle.js"></script>
